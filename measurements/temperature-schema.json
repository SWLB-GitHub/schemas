{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://raw.githubusercontent.com/SWLB-GitHub/schemas/main/measurements/temperature-schema.json",
    "title": "temperature",
    "description": "temperature measurement in °C",
    "type": "object",
    "properties": {
        "value": {
            "description": "measured temperature in °C",
            "type": "number",
            "minimum": -50,
            "maximum": 150
        },
        "unit": {
            "const": "°C"
        },
        "required": [ "value", "unit" ]
    }
}