{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://raw.githubusercontent.com/SWLB-GitHub/schemas/main/measurements/snr-schema.json",
    "title": "SNR Measurement",
    "description": "Signal to Noise Ratio",
    "type": "object",
    "properties": {
        "value": {
            "description": "SNR in dB",
            "type": "number",
            "minimum": -30,
            "maximum": 30
        },
        "unit": {
            "description": "physical unit associated with measurement",
            "const": "dB"

        },
        "required": [ "value", "unit" ]
    }
}
