{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://raw.githubusercontent.com/SWLB-GitHub/schemas/main/measurements/battery-schema.json",
    "title": "batteryVoltage",
    "description": "battery status in percent",
    "type": "object",
    "properties": {
        "value": {
            "description": "measured battery voltage",
            "type": "number",
            "minimum": 0,
            "maximum": 100
        },
        "unit": {
            "const": "%"
        },
        "required": [ "value", "unit" ]
    }
}