{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://raw.githubusercontent.com/SWLB-GitHub/schemas/main/measurement-schema.json",
    "title": "Measurement",
    "description": "General Measurement schema",
    "type": "object",
	"properties": {
		"value": {
			"description": "numerical value of measurement",
			"type": "number"
		},
		"valueStr": {
			"description": "string representation of measurement (optional)",
			"type": "string"
		},
		"unit": {
			"description": "physical unit associated with measurement (optional)",
			"type": "string"
		},
		"ObisCode": {
			"description": "OBIS code of measurement (optional)",
			"type": "string"
		}
    },
	"required": [ "value" ]
}
  
